<odoo>
    <record id="view_form_product" model="ir.ui.view">
        <field name="name">Product Form</field>
        <field name="model">t_shop</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="price"/>
                        <field name="stock"/>
                        <field name="category_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_product" model="ir.ui.view">
        <field name="name">Product Tree</field>
        <field name="model">t_shop</field>  <!-- Corrected model name -->
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="price"/>
                <field name="stock"/>
            </list>
        </field>
    </record>


</odoo>
