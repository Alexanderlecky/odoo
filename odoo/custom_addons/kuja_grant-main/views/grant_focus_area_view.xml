<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_grant_focus_area_tree" model="ir.ui.view">
            <field name="name">grant.focus.area.tree</field>
            <field name="model">grant.focus.area</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="view_grant_focus_area_form" model="ir.ui.view">
            <field name="name">grant.focus.area.form</field>
            <field name="model">grant.focus.area</field>
            <field name="arch" type="xml">
                <form string="Focus Area">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_grant_focus_area" model="ir.actions.act_window">
            <field name="name">Focus Area</field>
            <field name="res_model">grant.focus.area</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a grant focus area
              </p>
            </field>
        </record>
    </data>
</odoo>